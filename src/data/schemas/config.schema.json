{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://www.18xx-maker.com/schemas/config.schema.json",

  "definitions": {
    "font": {
      "type": "object",
      "properties": {
        "size": { "type": "string" },
        "weight": { "type": "string", "enum": ["normal", "bold"] },
        "family": { "type": "string" }
      },
      "additionalProperties": { "$ref": "#/definitions/font" }
    },
    "dimension": {
      "type": "integer",
      "minimum": 1
    },
    "dimensions": {
      "type": "object",
      "properties": {
        "width": { "$ref": "#/definitions/dimension" },
        "height": { "$ref": "#/definitions/dimension" }
      },
      "required": ["width", "height"]
    },
    "margins": {
      "$ref": "#/definitions/dimension"
    }
  },

  "type": "object",
  "properties": {
    "theme": { "type": "string" },
    "companiesTheme": { "type": "string" },
    "paper": {
      "allOf": [{
        "$ref": "#/definitions/dimensions"
      },{
        "properties": {
          "margins": { "$ref": "#/definitions/margins" }
        },
        "required": ["margins"]
      }]
    },
    "currency": {
      "type": "object",
      "properties": {
        "bank": { "type": "boolean" },
        "border": { "type": "boolean" },
        "capital": { "type": "boolean" },
        "market": { "type": "boolean" },
        "offboard": { "type": "boolean" },
        "par": { "type": "boolean" },
        "private": { "type": "boolean" },
        "revenue": { "type": "boolean" },
        "terrain": { "type": "boolean" },
        "token": { "type": "boolean" },
        "train": { "type": "boolean" },
        "treasury": { "type": "boolean" },
        "value": { "type": "boolean" }
      },
      "required": ["bank", "border", "capital", "market", "offboard", "par", "private", "revenue", "terrain", "token", "train", "value"],
      "additionalProperties": false
    },
    "stock": {
      "type": "object",
      "properties": {
        "cell": { "$ref": "#/definitions/dimensions" },
        "column": { "type": "number" },
        "diag": { "type": "number" },
        "par": { "type": "number" },
        "display": {
          "type": "object",
          "properties": {
            "legend": { "type": "boolean" },
            "par": { "type": "boolean" },
            "roundTracker": { "type": "boolean" }
          },
          "required": ["legend", "par", "roundTracker"],
          "additionalProperties": false
        }
      },
      "required": ["cell", "column", "diag", "par"],
      "additionalProperties": false
    },
    "cutlines": { "type": "number", "minimum": 0 },
    "cutlinesOffset": { "type": "number", "minimum": 0 },
    "bleed": { "type": "number", "minimum": 0 },
    "margin": { "type": "number", "minimum": 0 },
    "ipo": {
      "type": "object",
      "properties": {
        "borderRadius": { "type": "number", "minimum": 0 }
      },
      "required": ["borderRadius"],
      "additionalProperties": false
    },
    "cards": {
      "type": "object",
      "properties": {
        "shareStyle": {
          "type": "string",
          "enum": ["center", "left", "gmt"]
        },
        "layout": {
          "type": "string",
          "enum": ["free", "miniEuroDie", "dtgDie"]
        },
        "width": { "type": "number", "minimum": 1 },
        "height": { "type": "number", "minimum": 1 },
        "cutlines": { "type": "number", "minimum": 0 },
        "bleed": { "type": "number", "minimum": 0 },
        "border": { "type": "number", "minimum": 0},
        "blackBand": { "type": "boolean" }
      },
      "required": ["shareStyle", "layout", "width", "height", "cutlines", "bleed", "blackBand"],
      "additionalProperties": false
    },
    "trains": {
      "type": "object",
      "properties": {
        "style": { "type": "string", "enum": ["color", "number"] },
        "images": { "type": "boolean" }
      },
      "additionalProperties": false,
      "required": ["style", "images"]
    },
    "charters": {
      "type": "object",
      "properties": {
        "style": {
          "type": "string",
          "enum": ["carth", "color"]
        },
        "cutlines": { "type": "number", "minimum": 0 },
        "bleed": { "type": "number", "minimum": 0 },
        "border": { "type": "number", "minimum": 0},
        "halfWidth": { "type": "boolean" },
        "blackBand": { "type": "boolean" }
      },
      "required": ["style", "halfWidth", "cutlines", "border", "blackBand"],
      "additionalProperties": false
    },
    "tokens": {
      "type": "object",
      "properties": {
        "layout": {
          "type": "string",
          "enum": ["free", "gsp"]
        },
        "reverseMarketTokens": { "type": "string", "enum": ["none", "one", "all"] },
        "marketTokenSize": { "type": "number", "minimum": 1 },
        "stationTokenSize": { "type": "number", "minimum": 1 },
        "bleed": { "type": "boolean" }
      },
      "additionalProperties": false,
      "required": ["layout", "marketTokenSize", "stationTokenSize", "bleed"]
    },
    "coords": {
      "type": "string",
      "enum": ["outside", "inside", "edge", "none"]
    },
    "tiles": {
      "type": "object",
      "properties": {
        "layout": {
          "type": "string",
          "enum": ["offset", "individual", "die", "smallDie"]
        },
        "width": {
          "type": "number",
          "exclusiveMinimum": 0
        },
        "mapWidth": {
          "type": "number",
          "exclusiveMinimum": 0
        },
        "gaps": { "type": "boolean" }
      },
      "required": [
        "layout",
        "width",
        "mapWidth",
        "gaps"
      ],
      "additionalProperties": false
    },
    "companySvgLogos": {
      "type": "string",
      "enum": ["none", "original", "match", "main"]
    },
    "overrideCompanies": {
      "type": "string",
      "enum": ["none", "languages", "lotr", "dev", "webdev", "owl", "1830", "1830-Mayfair"]
    },
    "overrideSelection": {
      "type": "array",
      "items": { "type": "integer", "minimum": 0 }
    },
    "maps": {
      "type": "object",
      "required": ["players", "roundTracker"],
      "additionalProperties": false,
      "properties": {
        "players": { "type": "boolean" },
        "roundTracker": { "type": "boolean" }
      }
    },
    "plainMapCompanies": { "type": "boolean" },
    "straightCityNames": { "type": "boolean" },
    "font": { "$ref": "#/definitions/font" }
  },
  "required": [
    "bleed",
    "companiesTheme",
    "companySvgLogos",
    "coords",
    "cutlines",
    "cutlinesOffset",
    "font",
    "margin",
    "overrideCompanies",
    "overrideSelection",
    "paper",
    "plainMapCompanies",
    "stock",
    "theme",
    "tokens"
  ],
  "additionalProperties": false
}

{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://18xx.kelsin.net/schemas/config.schema.json",

  "definitions": {
    "font": {
      "type": "object",
      "properties": {
        "size": { "type": "string" },
        "weight": { "type": "string", "enum": ["normal", "bold"] },
        "family": { "type": "string" }
      },
      "additionalProperties": { "$ref": "#/definitions/font" }
    },
    "dimension": {
      "type": "integer",
      "minimum": 1
    },
    "dimensions": {
      "type": "object",
      "properties": {
        "width": { "$ref": "#/definitions/dimension" },
        "height": { "$ref": "#/definitions/dimension" }
      },
      "required": ["width", "height"]
    },
    "margins": {
      "$ref": "#/definitions/dimension"
    }
  },

  "type": "object",
  "properties": {
    "theme": { "type": "string" },
    "companiesTheme": { "type": "string" },
    "paper": {
      "allOf": [{
        "$ref": "#/definitions/dimensions"
      },{
        "properties": {
          "margins": { "$ref": "#/definitions/margins" }
        },
        "required": ["margins"]
      }]
    },
    "currency": {
      "type": "object",
      "properties": {
        "bank": { "type": "boolean" },
        "capital": { "type": "boolean" },
        "market": { "type": "boolean" },
        "offboard": { "type": "boolean" },
        "par": { "type": "boolean" },
        "private": { "type": "boolean" },
        "revenue": { "type": "boolean" },
        "terrain": { "type": "boolean" },
        "token": { "type": "boolean" },
        "train": { "type": "boolean" },
        "value": { "type": "boolean" }
      },
      "required": ["bank", "capital", "market", "offboard", "par", "private", "revenue", "terrain", "token", "train", "value"],
      "additionalProperties": false
    },
    "stock": {
      "type": "object",
      "properties": {
        "cell": { "$ref": "#/definitions/dimensions" },
        "column": { "$ref": "#/definitions/dimensions" },
        "diag": { "$ref": "#/definitions/dimensions" },
        "par": { "$ref": "#/definitions/dimensions" }
      },
      "required": ["cell", "column", "diag", "par"],
      "additionalProperties": false
    },
    "pagination": {
      "type": "string",
      "enum": ["equal", "max"]
    },
    "cards": {
      "type": "object",
      "properties": {
        "shareStyle": {
          "type": "string",
          "enum": ["center", "left", "gmt"]
        },
        "layout": {
          "type": "string",
          "enum": ["free", "miniEuroDie", "dtgDie"]
        },
        "width": { "type": "number", "minimum": 1 },
        "height": { "type": "number", "minimum": 1 },
        "cutlines": { "type": "number", "minimum": 0 },
        "bleed": { "type": "number", "minimum": 0 },
        "border": { "type": "number", "minimum": 0}
      },
      "required": ["shareStyle", "layout", "width", "height", "cutlines", "bleed"],
      "additionalProperties": false
    },
    "charters": {
      "type": "object",
      "properties": {
        "style": {
          "type": "string",
          "enum": ["carth", "color"]
        },
        "cutlines": { "type": "number", "minimum": 0 },
        "bleed": { "type": "number", "minimum": 0 },
        "border": { "type": "number", "minimum": 0},
        "halfWidth": { "type": "boolean" }
      },
      "required": ["style", "halfWidth", "cutlines", "border"],
      "additionalProperties": false
    },
    "tokenLayout": {
      "type": "string",
      "enum": ["max", "gsp"]
    },
    "coords": {
      "type": "string",
      "enum": ["outside", "inside", "edge", "none"]
    },
    "tiles": {
      "type": "object",
      "properties": {
        "layout": {
          "type": "string",
          "enum": ["offset", "individual", "die", "smallDie"]
        },
        "width": {
          "type": "number",
          "exclusiveMinimum": 0
        },
        "mapWidth": {
          "type": "number",
          "exclusiveMinimum": 0
        },
        "gaps": { "type": "boolean" }
      },
      "required": [
        "layout",
        "width",
        "mapWidth",
        "gaps"
      ],
      "additionalProperties": false
    },
    "companySvgLogos": {
      "type": "string",
      "enum": ["none", "original", "match", "main"]
    },
    "overrideCompanies": {
      "type": "string",
      "enum": ["none", "languages", "lotr", "dev", "webdev", "owl"]
    },
    "overrideSelection": {
      "type": "array",
      "items": { "type": "integer", "minimum": 0 }
    },
    "plainMapCompanies": { "type": "boolean" },
    "straightCityNames": { "type": "boolean" },
    "font": { "$ref": "#/definitions/font" }
  },
  "required": [
    "companiesTheme",
    "companySvgLogos",
    "coords",
    "font",
    "pagination",
    "paper",
    "plainMapCompanies",
    "stock",
    "theme",
    "tokenLayout",
    "overrideCompanies",
    "overrideSelection"
  ],
  "additionalProperties": false
}

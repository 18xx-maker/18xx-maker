{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://18xx.kelsin.net/schemas/tiles.schema.json",

  "definitions": {
    "position": {
      "type": "object",
      "properties": {
        "angle": { "type": "number", "miminum": 0, "exclusiveMaximum": 360 },
        "rotate": { "type": "number", "miminum": 0, "exclusiveMaximum": 360 },
        "rotation": { "type": "number", "miminum": 0, "exclusiveMaximum": 360 },
        "side": { "type": "number", "miminum": 1, "maximum": 6 },
        "x": { "type": "number" },
        "y": { "type": "number" },
        "percent": { "type": "number" }
      }
    },

    "removeBorders": {
      "type": "array",
      "items": {
        "type": "number",
        "minimum": 1,
        "maximum": 6
      }
    },

    "borders": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "color": { "type": "string" }
            },
            "required": ["color"]
          },
          { "$ref": "#/definitions/position" }
        ]
      }
    },

    "labels": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "label": { "type": "string" }
            },
            "required": ["label"]
          },
          { "$ref": "#/definitions/position" }
        ]
      }
    },

    "name": {
      "allOf": [
        {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "reverse": { "type": "boolean" },
            "fontSize": { "type": "number", "minimum": 4 }
          },
          "required": ["name"]
        },
        { "$ref": "#/definitions/position" }
      ]
    },

    "names": {
      "type": "array",
      "items": { "$ref": "#/definitions/name" }
    },

    "cities": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "name": { "$ref": "#/definitions/name" },
              "companies": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "label": { "type": "string" },
                    "color": { "type": "string" },
                    "additionalProperties": false
                  }
                }
              }
            }
          },
          { "$ref": "#/definitions/position" }
        ]
      }
    },

    "centerTowns": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "name": { "$ref": "#/definitions/name" }
            }
          },
          { "$ref": "#/definitions/position" }
        ]
      }
    },

    "towns": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "name": { "$ref": "#/definitions/name" }
            }
          },
          { "$ref": "#/definitions/position" }
        ]
      }
    },

    "terrain": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "cost": { "type": "string" },
              "size": {
                "type": "string",
                "enum": [
                  "tiny",
                  "small",
                  "medium",
                  "large"
                ]
              },
              "type": {
                "type": "string",
                "enum": [
                  "cactus",
                  "mountain",
                  "river",
                  "stream",
                  "swamp",
                  "water"
                ]
              }
            }
          },
          { "$ref": "#/definitions/position" }
        ]
      }
    },
    "icons": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["port", "meat"]
              }
            }
          },
          { "$ref": "#/definitions/position" }
        ]
      }
    },

    "track": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "sides": {
                "type": "array",
                "items": {
                  "type": "number",
                  "minimum": 1,
                  "maximum": 6
                }
              },
              "type": {
                "type": "string",
                "enum": ["custom", "offboard", "stub", "stop", "mid", "straight",
                         "straightStop", "gentle", "gentleStop", "gentleStopRev",
                         "lawson", "sharp", "sharpStop", "sharpStopRev", "bent",
                         "city", "bleed"]
              }
            }
          },
          { "$ref": "#/definitions/position" }
        ]
      }
    },

    "values": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "value": {
                "type": "number"
              }
            },
            "required": ["value"]
          },
          { "$ref": "#/definitions/position" }
        ]
      }
    },

    "tile": {
      "type": "object",
      "properties": {
        "color": { "type": "string" },
        "track": { "$ref": "#/definitions/track" },
        "cities": { "$ref": "#/definitions/cities" },
        "values": { "$ref": "#/definitions/values" },
        "labels": { "$ref": "#/definitions/labels" },
        "towns": { "$ref": "#/definitions/towns" },
        "centerTowns": { "$ref": "#/definitions/centerTowns" },
        "icons": { "$ref": "#/definitions/icons" },
        "terrain": { "$ref": "#/definitions/terrain" },
        "names": { "$ref": "#/definitions/names" },
        "borders": { "$ref": "#/definitions/borders" },
        "removeBorders": { "$ref": "#/definitions/removeBorders" },
        "rotations": {
          "oneOf": [
            {
              "type": "number",
              "minimum": 1,
              "maximum": 6
            },
            {
              "type": "array",
              "items": {
                "type": "number",
                "multipleOf": 60,
                "minimum": 0,
                "maximum": 300
              }
            }
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "color"
      ]
    }
  },

  "type": "object",
  "propertyNames": {
    "pattern": "^X?[0-9]+(\\|[0-9a-zA-Z]+)?$"
  },
  "additionalProperties": { "$ref": "#/definitions/tile" }
}

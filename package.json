{
  "name": "18xx-maker",
  "version": "1.0.0-beta.71",
  "author": "Christopher Giroir <kelsin@valefor.com>",
  "description": "18xx Prototyper",
  "type": "module",
  "homepage": "https://www.18xx-maker.com",
  "repository": {
    "url": "git@github.com:18xx-maker/18xx-maker.git"
  },
  "license": "MIT",
  "private": true,
  "main": "./out/main/index.js",
  "bin": {
    "18xx-schemas": "bin/schemas.cjs"
  },
  "scripts": {
    "all": "run-s -s pretty lint validate test:run",
    "b18": "node --disable-warning=ExperimentalWarning ./bin/b18.js",
    "build": "vite build",
    "build:app": "electron-vite build",
    "fix": "run-s -s pretty:fix lint:fix",
    "lint": "run-s -s lint:js lint:css lint:scss",
    "lint:fix": "run-s -s lint:js:fix lint:css:fix lint:scss:fix",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint --fix .",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:css:fix": "stylelint \"**/*.css\" --fix",
    "lint:scss": "stylelint \"**/*.scss\"",
    "lint:scss:fix": "stylelint \"**/*.scss\" --fix",
    "package:app": "electron-builder build -mwl -p onTagOrDraft",
    "pretty": "prettier -c .",
    "pretty:fix": "prettier --write .",
    "preview": "vite preview",
    "preview:app": "electron-vite preview",
    "print": "node --disable-warning=ExperimentalWarning ./bin/print.js",
    "release": "run-s -s build:app package:app",
    "schemas": "node ./bin/schemas.cjs",
    "start": "vite",
    "start:app": "electron-vite dev",
    "svgo": "run-p -s svgo:icons svgo:logos",
    "svgo:icons": "svgo -f src/data/icons",
    "svgo:logos": "svgo -f src/data/logos",
    "test": "vitest",
    "test:run": "vitest run",
    "validate": "npm-run-all --silent validate:schemas validate:config validate:games validate:themes validate:tiles -c -p --aggregate-output",
    "validate:config": "run-s -s \"schemas src/defaults.json\"",
    "validate:games": "run-s -s \"schemas src/data/games/**/*.json\"",
    "validate:schemas": "run-p -s validate:schemas:*",
    "validate:schemas:config": "ajv compile -s src/schemas/config.schema.json",
    "validate:schemas:fields": "ajv compile -s src/schemas/fields.schema.json",
    "validate:schemas:game": "ajv compile -r src/schemas/tiles.schema.json -s src/schemas/game.schema.json",
    "validate:schemas:theme": "ajv compile -s src/schemas/theme.schema.json",
    "validate:schemas:tile": "ajv compile -s src/schemas/tiles.schema.json",
    "validate:themes": "run-s -s \"schemas src/data/themes/**/*.json\"",
    "validate:tiles": "run-s -s \"schemas src/data/tiles/*.json\""
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-standard-scss"
    ],
    "ignoreFiles": [
      "node_modules/**/*",
      "out/**/*",
      "dist/**/*",
      "public/**/*",
      "src/fonts.css"
    ],
    "rules": {
      "font-family-no-missing-generic-family-keyword": null,
      "no-descending-specificity": null,
      "number-max-precision": null,
      "selector-class-pattern": null
    }
  },
  "build": {
    "appId": "com.18xx-maker.app",
    "productName": "18xx Maker",
    "directories": {
      "buildResources": "assets",
      "output": "out/app"
    },
    "afterSign": "electron/notarize.js",
    "mac": {
      "category": "public.app-category.games",
      "icon": "assets/18xx-maker.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "notarize": false,
      "publish": [
        "github"
      ]
    },
    "dmg": {
      "background": "assets/background.tiff"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        }
      ],
      "icon": "assets/18xx-maker.ico",
      "publish": [
        "github"
      ]
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/18xx-maker.png",
      "executableName": "18xx-maker",
      "publish": [
        "github"
      ]
    }
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-cli": "^5.0.0",
    "archiver": "^7.0.1",
    "bluebird": "^3.7.2",
    "chalk": "^4.1.2",
    "chokidar": "^3.4.0",
    "commander": "^12.1.0",
    "electron-is-dev": "^3.0.1",
    "electron-updater": "^6.3.9",
    "express": "^4.21.1",
    "glob": "^11.0.0",
    "puppeteer": "23.7.0",
    "ramda": "^0.30.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@eslint/js": "^9.14.0",
    "@mui/icons-material": "^6.1.6",
    "@mui/material": "^6.1.6",
    "@mui/styles": "^6.1.6",
    "@vitejs/plugin-react-swc": "^3.7.1",
    "browserslist": "^4.24.2",
    "browserslist-to-esbuild": "^2.1.1",
    "cross-env": "^7.0.2",
    "deep-object-diff": "^1.1.9",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "electron-vite": "^2.3.0",
    "eslint": "^9.14.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^15.12.0",
    "i18next": "^23.16.4",
    "i18next-browser-languagedetector": "^8.0.0",
    "lefthook": "^1.8.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-i18next": "^15.1.0",
    "react-markdown": "^9.0.1",
    "react-router": "^6.28.0",
    "react-router-dom": "^6.28.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "sass-embedded": "^1.80.6",
    "stylelint": "^16.10.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "svgo": "^3.3.2",
    "tinycolor2": "^1.6.0",
    "vite": "^5.4.10",
    "vite-plugin-fast-react-svg": "^0.5.0",
    "vitest": "^2.1.4"
  }
}

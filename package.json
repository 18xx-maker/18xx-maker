{
  "name": "18xx-maker",
  "version": "1.0.0-beta.109",
  "author": "Christopher Giroir <kelsin@valefor.com>",
  "description": "18xx Prototyper",
  "type": "module",
  "homepage": "https://www.18xx-maker.com",
  "repository": "github:18xx-maker/18xx-maker",
  "license": "MIT",
  "private": true,
  "main": "./dist/main/index.cjs",
  "bin": {
    "maker": "bin/maker.js"
  },
  "imports": {
    "#cli/*": "./src/cli/*.js",
    "#util/*": "./src/util/*.js"
  },
  "scripts": {
    "b18": "node --disable-warning=ExperimentalWarning ./bin/b18.js",
    "build": "vite build",
    "build:app": "electron-vite build",
    "build:sb": "storybook build -o dist/sb",
    "bundle": "vite-bundle-visualizer",
    "fix": "run-s pretty:fix lint:fix",
    "lint": "run-s lint:js lint:css",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:css:fix": "stylelint \"**/*.css\" --fix",
    "lint:fix": "run-s lint:js:fix lint:css:fix",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint --fix .",
    "maker": "node bin/maker.js",
    "package:app": "electron-builder build -mwl -p never",
    "pretty": "prettier -c .",
    "pretty:fix": "prettier --write .",
    "preview": "vite preview",
    "preview:app": "electron-vite preview",
    "print": "node --disable-warning=ExperimentalWarning ./bin/print.js",
    "start": "vite",
    "start:app": "electron-vite dev",
    "start:sb": "storybook dev -p 6006",
    "svgo": "run-p svgo:icons svgo:logos",
    "svgo:icons": "svgo -f src/data/icons",
    "svgo:logos": "svgo -f src/data/logos",
    "test": "vitest",
    "test:run": "vitest run",
    "validate": "node ./bin/maker.js validate \"src/schemas/*.schema.json\" \"src/*.json\" \"src/data/**/*.json\"",
    "validate:schemas": "node ./bin/maker.js validate \"src/schemas/*.schema.json\""
  },
  "browserslist": {
    "production": [
      "defaults"
    ],
    "app": [
      "Electron >= 33"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0,
        "always"
      ],
      "footer-max-line-length": [
        0,
        "always"
      ],
      "header-max-length": [
        0,
        "always"
      ]
    }
  },
  "prettier": {
    "plugins": [
      "@ianvs/prettier-plugin-sort-imports"
    ],
    "importOrder": [
      "<BUILTIN_MODULES>",
      "",
      "<THIRD_PARTY_MODULES>",
      "",
      "^@mui",
      "",
      "^ramda$",
      "",
      "^@(/.*)$",
      "^#(.*)$",
      "^[.]",
      "",
      "^@tests(/.*)$",
      "",
      "^(?!.*[.]css$)[./].*$",
      ".css$"
    ],
    "importOrderCaseSensitive": true
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ],
    "ignoreFiles": [
      "coverage/**/*",
      "dist/**/*",
      "docker/**/*",
      "node_modules/**/*",
      "public/**/*",
      "src/styles/fonts.css",
      "src/styles/markdown.css"
    ],
    "rules": {
      "font-family-no-missing-generic-family-keyword": null,
      "no-descending-specificity": null,
      "number-max-precision": null,
      "selector-class-pattern": null
    }
  },
  "build": {
    "appId": "com.18xx-maker.app",
    "artifactName": "18xx-maker-${version}-${os}-${arch}.${ext}",
    "electronUpdaterCompatibility": ">= 2.16",
    "productName": "18xx Maker",
    "directories": {
      "buildResources": "electron/assets",
      "output": "dist/app"
    },
    "files": [
      "!.*",
      "!bin${/*}",
      "!certificate.p12",
      "!dist/app${/*}",
      "!dist/sb${/*}",
      "!dist/site${/*}",
      "!docker${/*}",
      "!electron${/*}",
      "!electron.vite.config.js",
      "!eslint.config.js",
      "!index.html",
      "!junit.xml",
      "!lefthook.yml",
      "!Makefile",
      "!out${/*}",
      "!pnpm-lock.yaml",
      "!public${/*}",
      "!release-please-config.json",
      "!render${/*}",
      "!src${/*}",
      "!stats.html",
      "!svgo.config.js",
      "!tests${/*}",
      "!vite.config.js",
      "!vitest.config.js"
    ],
    "afterSign": "electron/notarize.js",
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "universal"
          ]
        }
      ],
      "category": "public.app-category.games",
      "icon": "electron/assets/18xx-maker.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "electron/assets/entitlements.mac.plist",
      "entitlementsInherit": "electron/assets/entitlements.mac.plist",
      "notarize": false
    },
    "dmg": {
      "background": "electron/assets/background.tiff"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": "ia32"
        }
      ],
      "icon": "electron/assets/18xx-maker.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "electron/assets/18xx-maker.png",
      "executableName": "18xx-maker"
    }
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "bluebird": "^3.7.2",
    "chalk": "^4.1.2",
    "chokidar": "^3.6.0",
    "commander": "^12.1.0",
    "electron-updater": "^6.3.9",
    "env-paths": "^3.0.0",
    "express": "^4.21.1",
    "glob": "^11.0.0",
    "json-schema-library": "10.0.0-rc2",
    "lodash.debounce": "^4.0.8",
    "ramda": "^0.30.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.2",
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@emotion/react": "^11.13.5",
    "@emotion/styled": "^11.13.5",
    "@eslint/js": "^9.15.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.0",
    "@mui/icons-material": "^6.1.8",
    "@mui/material": "^6.1.8",
    "@mui/styles": "^6.1.8",
    "@playwright/test": "^1.49.0",
    "@reduxjs/toolkit": "^2.3.0",
    "@storybook/addon-essentials": "^8.4.5",
    "@storybook/addon-interactions": "^8.4.5",
    "@storybook/addon-onboarding": "^8.4.5",
    "@storybook/blocks": "^8.4.5",
    "@storybook/react": "^8.4.5",
    "@storybook/react-vite": "^8.4.5",
    "@storybook/test": "^8.4.5",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@vitejs/plugin-react-swc": "^3.7.1",
    "@vitest/browser": "^2.1.5",
    "@vitest/coverage-v8": "^2.1.5",
    "@vitest/ui": "^2.1.5",
    "browserslist": "^4.24.2",
    "browserslist-to-esbuild": "^2.1.1",
    "deep-object-diff": "^1.1.9",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "electron-vite": "^2.3.0",
    "eslint": "^9.15.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-storybook": "^0.11.1",
    "eslint-plugin-testing-library": "^6.5.0",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^15.12.0",
    "i18next": "^23.16.8",
    "i18next-browser-languagedetector": "^8.0.0",
    "jsdom": "^25.0.1",
    "lefthook": "^1.8.4",
    "npm-run-all": "^4.1.5",
    "plausible-tracker": "^0.3.9",
    "playwright": "^1.49.0",
    "postcss": "^8.4.49",
    "postcss-nesting": "^13.0.1",
    "postcss-preset-env": "^10.1.1",
    "prettier": "^3.3.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-i18next": "^15.1.1",
    "react-markdown": "^9.0.1",
    "react-redux": "^9.1.2",
    "react-router": "^7.0.1",
    "react-syntax-highlighter": "^15.6.1",
    "remark-gfm": "^4.0.0",
    "remark-github-blockquote-alert": "^1.3.0",
    "storybook": "^8.4.5",
    "stylelint": "^16.10.0",
    "stylelint-config-standard": "^36.0.1",
    "svgo": "^3.3.2",
    "tinycolor2": "^1.6.0",
    "uuid": "^11.0.3",
    "vite": "^5.4.11",
    "vite-bundle-visualizer": "^1.2.1",
    "vite-plugin-fast-react-svg": "^0.5.0",
    "vitest": "^2.1.5"
  }
}
